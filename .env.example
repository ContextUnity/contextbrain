# ContextBrain Environment Variables
# Copy this file to .env and configure with your values

# --- Storage / Database ---
BRAIN_DATABASE_URL=postgresql+psycopg://user:pass@localhost:5432/brain
PGVECTOR_DIM=768

# --- Ingestion Pipeline ---
# CONTEXTBRAIN_CONFIG_PATH=ingestion.toml
# Data source directory
DATA_PATH=./data
# Where to store indices and snapshots
ASSETS_PATH=./assets

# --- Distributed Processing ---
# Number of workers for ingestion (defaults to half of CPU cores)
# WORKERS=4

# --- Vertex AI / Embeddings ---
VERTEX_PROJECT_ID=your-project-id
VERTEX_LOCATION=us-central1

# --- Observability ---
LOG_LEVEL=INFO
SERVICE_NAME=contextbrain
# REDIS_URL=redis://localhost:6379/1
